        justify-content: center;
    }

    .phone-tilted {
        width: 270px;
        transform: rotate(-5deg);
        transition: transform 0.5s;
        border-radius: 40px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.12);
        border: 6px solid white;
        overflow: hidden;
    }
    
    .map-container:hover .phone-tilted { transform: rotate(0deg) scale(1.02); }

    /* Map Pins */
    .map-pin {
        position: absolute;
        z-index: 10;
        cursor: pointer;
    }
    .pin-head {
