        line-height: 1.2;
        color: var(--c-text);
        margin-bottom: 24px;
        font-weight: 800;
    }

    .highlight {
        color: var(--c-main);
        position: relative;
    }
    .highlight::after {
        content: '';
        position: absolute;
        bottom: 8px; left: 0; right: 0;
        height: 12px;
        background: var(--c-sand);
        opacity: 0.5;
        z-index: -1;
        border-radius: 4px;
    }

    .subheadline {
        font-size: 1.25rem;
        color: var(--c-text-muted);
        line-height: 1.8;
        margin-bottom: 40px;
        max-width: 90%;
