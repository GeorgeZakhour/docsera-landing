    .tall {
        grid-column: 3;
        grid-row: 1 / 3;
        background: var(--c-main-dark);
        color: white;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    .tall h3 { font-size: 3.5rem; margin: 0; }
    .tall p { opacity: 0.8; font-size: 1.2rem; }

    .sand {
        grid-column: 1; /* These might need adjustment if grid flow is strict, keeping flex for simplicity below */
        display: none; /* Hide if simpler layout preferred, but let's re-arrange below for mobile */
    }

