        grid-template-columns: 2fr 1fr;
        grid-template-rows: auto;
    }
    
    .wide { grid-column: 1; grid-row: 1 / span 2; }
    .tall { grid-column: 2; grid-row: 1; height: 250px; }
    
    .teal { 
        background: var(--c-main); 
        color: white; 
        grid-column: 2; 
        grid-row: 2; 
        padding: 24px;
    }
    .teal h3 { font-size: 1.5rem; margin: 0; }
